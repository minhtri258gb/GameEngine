{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run Main",
			"type": "shell",
			"command": "bin\\main.exe",
			"group": "test"
		},
		{
			"label": "Meson Build",
			"type": "shell",
			"command": "meson",
			"args": [
				"compile"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/bin"
			}
		},
		{
			"label": "Meson Config",
			"type": "shell",
			"command": "meson",
			"args": [
				"setup",
				"bin"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			}
		}
	]
}